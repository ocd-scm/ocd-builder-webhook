[
  {
    "id": "ocd-builder",
    "execute-command": "/usr/local/bin/trigger-oc-build.sh",
    "command-working-directory": "/opt/app-root/src",
    "pass-arguments-to-command":
    [
      {
        "source": "payload",
        "name": "ref"
      }
    ],
    "trigger-rule":
    {
        "match":
        {
            "type": "regex",
            "regex": "{{ getenv "WEBHOOK_REF_REGEX" | js }}",
            "parameter":
            {
                "source": "payload",
                "name": "release.tag_name"
            }
        }  
    }
  }
]